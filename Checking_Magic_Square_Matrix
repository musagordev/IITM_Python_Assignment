def is_magic(mat):
  """
  determine if a matrix is magic square

  Paramters:
      mat: list of lists
  Return:
      string: 'YES' or 'NO'
  """
"""
  def sum_of_rows(mat):
      sum = 0
      for i in range(len(mat)):
          row = mat[i]
          sum_row = 0
          for j in row:
              sum_row = sum_row + j
          if sum == 0:
              sum = sum_row
          else:
              if sum != sum_row:
                  return False
